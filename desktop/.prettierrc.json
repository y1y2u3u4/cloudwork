{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "printWidth": 80,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(react-dom/(.*)$)|^(react-dom$)",
    "^(react-router-dom/(.*)$)|^(react-router-dom$)",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/components(/(.*))?$",
    "^@/hooks(/(.*))?$",
    "^@/lib(/(.*))?$",
    "^@/utils(/(.*))?$",
    "^@/types(/(.*))?$",
    "^@/styles(/(.*))?$",
    "",
    "^[./]"
  ]
}
